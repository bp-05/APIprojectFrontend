# Vite exposes only variables prefixed with VITE_

# Base URL of the DRF backend
VITE_API_BASE_URL=http://localhost:8000

# Optional API prefix (e.g. /api). Leave empty to skip.
VITE_API_PREFIX=/api

# Auth (JWT Simple) endpoints relative to prefix
VITE_AUTH_LOGIN_PATH=/token/
VITE_AUTH_REFRESH_PATH=/token/refresh/
# JWT no expone logout server-side; dejar vac√≠o si no aplica
VITE_AUTH_LOGOUT_PATH=

# Request timeout in milliseconds
VITE_API_TIMEOUT_MS=15000
