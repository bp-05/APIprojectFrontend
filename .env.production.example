# ===========================================
# .env.production.example - Plantilla para producción AWS
# ===========================================
# Copia este archivo a .env.production y completa los valores

# URL del Backend API (EC2 backend o dominio)
# Ejemplo: http://3.144.4.226 o https://api.mi-dominio.com
VITE_API_BASE_URL=http://tu-ip-o-dominio-backend

# Prefijo de la API
VITE_API_PREFIX=/api

# Endpoints de autenticación JWT
VITE_AUTH_LOGIN_PATH=/token/
VITE_AUTH_REFRESH_PATH=/token/refresh/
VITE_AUTH_LOGOUT_PATH=

# Timeout de peticiones en milisegundos
VITE_API_TIMEOUT_MS=15000
